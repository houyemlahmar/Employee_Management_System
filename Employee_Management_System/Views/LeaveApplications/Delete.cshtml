@model Employee_Management_System.Models.LeaveApplication

@{
    ViewData["Title"] = "Delete Leave Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center custom-header">Delete Leave Application</h1>

<div class="container my-5 pb-5 mb-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header custom-header text-center">
            <h2 class="mb-0">Confirm Deletion</h2>
        </div>
        <div class="card-body p-5 text-center">
            <div class="alert custom-alert-danger mb-4">
                Are you sure you want to delete this leave application?
            </div>

            <dl class="row justify-content-center">
                <dt class="col-sm-3">
                    From
                </dt>
                <dd class="col-sm-9">
                    @Model.StartDate.ToShortDateString()
                </dd>
                <dt class="col-sm-3">
                    To
                </dt>
                <dd class="col-sm-9">
                    @Model.EndDate.ToShortDateString()
                </dd>
                <dt class="col-sm-3">
                    Type
                </dt>
                <dd class="col-sm-9">
                    @Model.Type
                </dd>
                <dt class="col-sm-3">
                    Priority
                </dt>
                <dd class="col-sm-9">
                    @Model.Priority
                </dd>
                <dt class="col-sm-3">
                    Status
                </dt>
                <dd class="col-sm-9">
                    @Model.Status
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed" class="d-flex justify-content-center mt-4 gap-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn custom-btn btn-sm">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="MyLeaves" class="btn custom-btn-outline btn-sm">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .custom-header {
            background-color: #e3b0b8; /* Rouge doux */
            color: black;
            font-weight: bold;
            text-transform: uppercase;
        }

        .custom-alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 20px;
            font-weight: bold;
        }

        .custom-btn {
            background-color: #c92a2a; /* Rouge plus doux */
            color: white;
            border-radius: 25px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .custom-btn:hover {
                background-color: #a51f1f; /* Rouge plus foncé */
            }

        .custom-btn-outline {
            background-color: transparent;
            color: #c92a2a; /* Rouge doux */
            border-radius: 25px;
            padding: 10px 20px;
            border: 2px solid #c92a2a; /* Rouge doux */
            font-weight: bold;
        }

            .custom-btn-outline:hover {
                background-color: #e3b0b8; /* Rouge doux */
                color: white;
            }

        .container {
            max-width: 700px;
        }

        .card-header, .card-body {
            background-color: #f7fafc; /* Blanc légèrement gris */
        }

        .row dt {
            font-weight: bold;
        }

        .gap-3 {
            gap: 1rem;
        }
    </style>
}
