@model Employee_Management_System.Models.LeaveApplication
@{
    ViewData["Title"] = "Leave application details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info mb-4">Leave application details</h2>

<div class="card p-4 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Début</dt>
        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Fin</dt>
        <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Priority</dt>
        <dd class="col-sm-9">@Model.Priority</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
    <a asp-action="MyLeaves" class="btn btn-secondary">Back to list</a>
</div>