@model Employee_Management_System.Models.Utilisateur
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-soft">
    <div class="card login-card p-5 shadow-lg animated zoomIn">
        <h2 class="text-center mb-4 text-primary-gradient">Login</h2>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="LoginEmployee" method="post">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control soft-input" placeholder="Enter your email" required />
            </div>

            <div class="mb-4">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control soft-input" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-soft-primary w-100 mb-3">Login</button>
        </form>
    </div>
</div>

@section Styles {
    <style>
        body {
            margin: 0;
            overflow-x: hidden;
        }

        /* Soft background with pastel gradient */
        .bg-soft {
            background: linear-gradient(135deg, #fdfbfb, #ebedee);
            background-size: 200% 200%;
            animation: gradientFlow 10s ease infinite alternate;
        }

        @@keyframes gradientFlow {
            0%

        {
            background-position: 0% 50%;
        }

        100% {
            background-position: 100% 50%;
        }

        }

        /* Login card */
        .login-card {
            background: #ffffff;
            border-radius: 1rem;
            width: 100%;
            max-width: 380px;
            animation: floatIn 1s ease forwards;
            opacity: 0;
        }

        /* Floating effect on appear */
        @@keyframes floatIn {
            from

        {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }

        /* Soft input style */
        .soft-input {
            border-radius: 0.8rem;
            padding: 0.8rem 1rem;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            transition: all 0.3s ease;
        }

            .soft-input:focus {
                background: #ffffff;
                box-shadow: 0 0 10px rgba(0, 123, 255, 0.2);
                border-color: #0d6efd;
            }

        /* Text gradient */
        .text-primary-gradient {
            background: linear-gradient(90deg, #74ebd5, #acb6e5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
        }

        /* Soft primary button */
        .btn-soft-primary {
            background: linear-gradient(90deg, #74ebd5, #acb6e5);
            color: white;
            border: none;
            padding: 0.75rem;
            font-weight: 600;
            border-radius: 0.8rem;
            transition: all 0.4s ease;
        }

            .btn-soft-primary:hover {
                background: linear-gradient(90deg, #acb6e5, #74ebd5);
                transform: scale(1.03);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            }
    </style>
}
