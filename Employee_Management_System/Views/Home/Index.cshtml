@{
    ViewData["Title"] = "Welcome to EMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section d-flex flex-column justify-content-center align-items-center text-center">
    <h1 class="display-3 mb-4 animated-text">Welcome to <span class="text-gradient">HireOn</span></h1>
    <p class="lead mb-5 text-muted fade-in">Efficiently manage your company's workforce, leaves, and salaries with ease.</p>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-3">
            <a asp-controller="Compte" asp-action="LoginHR" class="btn btn-lg btn-gradient w-100 py-3 shadow-lg border-0 rounded-pill hover-scale">
                👨‍💼 HR Manager Space
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="Compte" asp-action="LoginEmployee" class="btn btn-lg btn-gradient w-100 py-3 shadow-lg border-0 rounded-pill hover-scale">
                👷‍♂️ Employee Space
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Background with subtle animation */
        .hero-section {
            min-height: 90vh;
            background: linear-gradient(135deg, #f8f9fc 0%, #e2e6ea 100%);
            overflow: hidden;
            padding-top: 100px;
            animation: backgroundMove 15s infinite alternate;
        }

        /* Animation background */
        @@keyframes backgroundMove {
            0% {
                background-position: 0% 50%;
            }

            100% {
                background-position: 100% 50%;
            }
        }

        /* Gradient text */
        .text-gradient {
            background: linear-gradient(90deg, #4e73df, #1cc88a);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }

        /* Animations on text */
        .animated-text {
            animation: fadeInUp 1s ease-out;
        }

        .fade-in {
            animation: fadeIn 2s ease-out;
        }

        /* Animation fade in up */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Animation fade in */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        /* Stylish Gradient Button */
        .btn-gradient {
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            color: white;
            font-size: 20px;
            font-weight: 600;
            border-radius: 50px;
            padding: 12px 25px;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
            box-shadow: 0 8px 16px rgba(78, 115, 223, 0.3);
        }

            /* Add a shine effect */
            .btn-gradient::after {
                content: '';
                position: absolute;
                top: 0;
                left: -75%;
                width: 50%;
                height: 100%;
                background: linear-gradient( 120deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0) 100% );
                transform: skewX(-25deg);
                z-index: 2;
                transition: all 0.6s ease;
            }

            .btn-gradient:hover::after {
                left: 125%;
            }

            .btn-gradient:hover {
                background: linear-gradient(135deg, #1cc88a, #4e73df);
                box-shadow: 0 12px 24px rgba(28, 200, 138, 0.4);
                transform: translateY(-4px);
            }

        /* Hover scale effect */
        .hover-scale {
            transition: transform 0.3s ease;
        }

            .hover-scale:hover {
                transform: scale(1.07);
            }

        /* Container adjustments */
        .container {
            max-width: 100%;
        }
    </style>
}

