@model Employee_Management_System.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5 pb-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h2 class="mb-0">Delete Department</h2>
                </div>
                <div class="card-body p-5">
                    <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>

                    <h4 class="mb-3">Department Details</h4>
                    <hr />
                    <dl class="row mb-4">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger w-48">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary w-48">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card-header {
            background-color: #dc3545 !important;
            border-top-left-radius: 0.25rem;
            border-top-right-radius: 0.25rem;
        }

        .card-body {
            background-color: #f8f9fa;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-outline-secondary {
            background-color: #f8f9fa;
            border-color: #6c757d;
        }

        .btn {
            font-size: 16px;
            padding: 10px;
        }

        .w-48 {
            width: 48%;
        }

        dl {
            margin-bottom: 0;
        }

        .row {
            margin-bottom: 1rem;
        }
    </style>
}
